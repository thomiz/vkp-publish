		<period>
			<start value="2018-06-25T08:00:00.936Z"/>
			<end value="2018-06-25T08:00:22.678Z"/>
		</period>
	</classHistory>
	<!-- The encounter type, we suggest using predefined codes from http://ehelse.no/fhir/CodeSystem/vkp-camera-reason-v05 -->
