<Patient xmlns="http://hl7.org/fhir" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://hl7.org/fhir ../../STU3/fhir-all-xsd/fhir-single.xsd">
	<meta>
		<profile value="http://ehelse.no/fhir/StructureDefinition/vkp-Patient"/>
	</meta>
	<extension url="http://hl7.org/fhir/StructureDefinition/patient-nationality">
		<extension url="code">
			<valueCodeableConcept>
				<coding>
					<system value="urn:iso:std:iso:3166"/>
					<code value="NO"/>
				</coding>
			</valueCodeableConcept>
		</extension>
	</extension>
	<extension url="http://ehelse.no/fhir/StructureDefinition/no-bydel">
		<valueString value="Bydel Alna"/>
	</extension>
	<extension url="http://ehelse.no/fhir/StructureDefinition/vkp-sone">
	<!-- Tjenestested/sone -->
		<valueReference>
		<!-- En logisk referanse til Toppnivå sonen til pasienten. En logisk referanse henviser alltid til den Identifier som er satt på ressursen, i dette til fellet en UUID. -->
			<identifier>
				<system value="urn:ietf:rfc:3986"/>
				<value value="urn:uuid:6a1cf8db-caa9-4b81-9c28-85f3e068c116"/>
			</identifier>
		</valueReference>
	</extension>
	<extension url="http://ehelse.no/fhir/StructureDefinition/vkp-elock">
	<!-- Angir at pasienten har installert elås på hjemmeadressen -->
		<valueBoolean value="true"/>
	</extension>
	<identifier> <!-- Fødselnummeret til brukeren -->
		<system value="urn:oid:2.16.578.1.12.4.1.4.1"/>
		<value value="05073500186"/>
	</identifier>
	<identifier> <!-- en annen identifikator, for eksempel løpenummer i EPJ -->
		<system value="http://profil.visma.no/lopenummer"/>
		<value value="123"/>
	</identifier>
	<name> <!-- Navnet til brukeren -->
		<family value="Sørgård"/>
		<given value="Ærlend"/>
	</name>
	<telecom>
		<system value="phone"/>
		<value value="+4733445566"/>
		<use value="home"/>
	</telecom>
	<gender value="male"/>
	<address>
		<extension url="http://ehelse.no/fhir/StructureDefinition/no-propertyinformation-v05">
			<extension url="kommune">
				<valueString value="Drammen"/>
			</extension>
		</extension>
		<use value="home"/>
		<line value="Åssiden 32"/>
		<city value="Drammen"/>
		<postalCode value="3008"/>
		<country value="NO"/>
	</address>
	<maritalStatus>
		<coding>
			<system value="http://hl7.org/fhir/v3/MaritalStatus"/>
			<code value="U"/>
			<display value="unmarried"/>
		</coding>
	</maritalStatus>
	<contact>
		<relationship>
			<coding>
				<system value="http://hl7.org/fhir/v2/0131"/>
				<code value="CP"/>
				<display value="Contact person"/>
			</coding>
		</relationship>
		<name> <!-- Navnet til kontaktpersonen, legg merke til mellomnavn som ikke er en del av HumanName i FHIR -->
			<extension url="http://ehelse.no/fhir/StructureDefinition/no-middlename">
				<valueString value="Pårørende"/>
			</extension>
			<text value="Pål Pårørende Olsen"/>
			<family value="Olsen"/>
			<given value="Pål"/>
		</name>
	</contact>
</Patient>
